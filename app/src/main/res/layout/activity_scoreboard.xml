<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamebackground3"
    tools:context=".ScoreboardActivity">

    <GridLayout
        android:id="@+id/scoreboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:addStatesFromChildren="false"
        android:clipChildren="true"
        android:columnCount="2"
        android:rowCount="3"
        android:useDefaultMargins="true">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="@color/silver"
            app:srcCompat="@drawable/fstplace"
            android:contentDescription="@string/firsttrophy" />

        <TextView
            android:id="@+id/first_score"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/silver"
            android:textAlignment="center"/>


        <TextView
            android:id="@+id/second_score"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/silver"
            android:textAlignment="center"/>


        <TextView
            android:id="@+id/third_score"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/silver"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="0"
            app:srcCompat="@drawable/sndplace"
            android:contentDescription="@string/secondtrophy" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="0"
            app:srcCompat="@drawable/trdplace"
            android:contentDescription="@string/thirdtrophy" />



    </GridLayout>

    <TextView
        android:id="@+id/scoreboardTitle"
        android:layout_width="220dp"
        android:layout_height="128dp"
        android:layout_alignTop="@id/scoreboard"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="-176dp"
        android:text="@string/best_scores"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        android:textColor="@color/silver"/>

    <Button
        android:id="@+id/menuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/scoreboard"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-73dp"
        android:text="@string/menu" />

</RelativeLayout>